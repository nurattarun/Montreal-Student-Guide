@page
@model Montreal_Student_Guide.Pages.CreateModel
@{
    if(Model.Error != null

    )
    {
        <div class="alert alert-danger">@Model.Error</div>
    }
}

<style>
   
    body {
        background-color: #F4F4F4;
    }

    form {
        background-color: #FFFFFF;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        padding: 40px;
        margin-top: 50px;
        font-family: Arial, sans-serif;
    }

    h1 {
        text-align: center;
        font-weight: bold;
        font-size: 24px;
        color: #4A4A4A;
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
        color: #4A4A4A;
        margin-bottom: 10px;
        display: block;
    }

    input.form-control {
        border-radius: 5px;
        border: 1px solid #D6D6D6;
        padding: 10px;
        font-size: 16px;
        color: #4A4A4A;
        margin-bottom: 20px;
        width: 100%;
        box-sizing: border-box;
    }

    input.form-control:focus {
        outline: none;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .text-danger {
        font-size: 12px;
        color: #D9534F;
        margin-top: 5px;
        display: block;
    }

    .btn-primary {
        background-color: #00A0DF;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        color: #FFFFFF;
        cursor: pointer;
        transition: background-color 0.3s ease;
        display: block;
        margin: 20px auto 0;
    }

    .btn-primary:hover {
        background-color: #0072B8;
    }
</style>
<form method="post">
    <h1>Create Student Record</h1>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Product.StudentId">Student ID</label>
            <input asp-for="@Model.Product.StudentId" class="form-control" required />
            <span asp-validation-for="@Model.Product.StudentId" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Product.OpusCardFee">Opus Card Fee</label>
            <input asp-for="@Model.Product.OpusCardFee" class="form-control" required />
            <span asp-validation-for="@Model.Product.OpusCardFee" class="text-danger"></span>
        </div>
         <div class="form-group col-md-6">
            <label asp-for="@Model.Product.AvgRent">Average Rent</label>
            <input asp-for="@Model.Product.AvgRent" class="form-control" required />
            <span asp-validation-for="@Model.Product.AvgRent" class="text-danger"></span>
        </div>
         <div class="form-group col-md-6">
            <label asp-for="@Model.Product.PublicLibAdd">Public Library Address</label>
            <input asp-for="@Model.Product.PublicLibAdd" class="form-control" required />
            <span asp-validation-for="@Model.Product.PublicLibAdd" class="text-danger"></span>
        </div>
         <div class="form-group col-md-6">
            <label asp-for="@Model.Product.Category">Category</label>
            <input asp-for="@Model.Product.Category" class="form-control" required />
            <span asp-validation-for="@Model.Product.Category" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>